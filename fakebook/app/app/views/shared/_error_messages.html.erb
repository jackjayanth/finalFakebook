<% if @user.errors.any? %>
    <div>
        <div>
            The form contains <%= pluralize(@user.errors.count, "error")%>
            <ul style="height:100px;width:200px;text-decoration:none;">
                <% @user.errors.full_messages.each do |msg|%>
                <li ><%= msg %> </li>
                <% end%>
            </ul>
        </div>
    </div>
<% end %>