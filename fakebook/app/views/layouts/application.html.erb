      success: function(result) {
        //$(this).siblings(".comment_input").val("");
        //location.reload();
      }
    });
    location.reload();
  });

  $(".comment_delete").click(function(){
    var mUrl = "/comment_delete?comment_id="+$(this).val();
    $.ajax({
      url: mUrl,
      type: 'post',
      format: JSON,
      success: function(result) {
