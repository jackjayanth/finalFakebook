    var area = $(this).parent().siblings(".text").children(".edit_comment_area");
    area.show();
  });

  $(".comment_edit_confirm").click(function(){
    var mUrl = "/comment_edit?comment_id="+$(this).val()+"&text="+$(this).siblings(".for_edit").val();
    $.ajax({
      url: mUrl,
      type: 'post',
      format: JSON,
      success: function(result) {
