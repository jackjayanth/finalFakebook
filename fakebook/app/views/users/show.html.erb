<br/>
<div class="profile">
    <aside>
        <div class="micropostdiv">
            <% if @user.microposts.any? %>
              <h3>Total Posts (<%= @user.microposts.count %>)</h3>
              <ol class="microposts">
                <%= render @user.microposts %>
              </ol>
            <% else %>
            <h1> no posts yet</h1>
            <% end %>
        </div>
    </aside>

    <div class="user_area">
       <h2>
         <%= @user.name   %>
         <% if @user.id == current_user.id %>
         <span><%= link_to "edit",   edit_user_path(current_user) %></span>
         <% end %>
       </h2>
        <table class="user_info">
            <tr>
                <td class="td_title">E-mail: </td>
                <td class="td_desc"><%= @user.email%></td>
            </tr>
            <tr>
                <td class="td_title">Work: </td>
                <td class="td_desc"><%= @user.work %></td>
            </tr>
            <tr>
                <td class="td_title">Education: </td>
                <td class="td_desc">
                  <% if @user.education != nil && @user.education != "" %>
                    <%=@user.education%>
                  <% elsif @user.id == current_user.id %>
                      <%= link_to "add",   edit_user_path(current_user) %>
                  <% end %>
                </td>
            </tr>
            <tr>
                <td class="td_title">About: </td>
                <td class="td_desc">
                  <% if @user.about != nil && @user.about != "" %>
                      <%=@user.about%>
                  <% elsif @user.id == current_user.id %>
                      <%= link_to "add",   edit_user_path(current_user) %>
                  <% end %>
                </td>
            </tr>
            <tr>
                <td class="td_title">Relationship: </td>
                <td class="td_desc">
                  <% if @user.relatioship != nil && @user.relatioship != "" %>
                      <%=@user.relatioship%>
                  <% elsif @user.id == current_user.id %>
                      <%= link_to "add",   edit_user_path(current_user) %>
                  <% end %>
                </td>
            </tr>
            <tr>
                <td class="td_title">Date Of Birth: </td>
                <td class="td_desc">
                  <% if @user.dob != nil && @user.dob != "" %>
                      <%=@user.dob%>
                  <% elsif @user.id == current_user.id %>
                      <%= link_to "add",   edit_user_path(current_user) %>
                  <% end %>
                </td>
            </tr>
            <tr>
                <td class="td_title">Interests: </td>
                <td class="td_desc">
                  <% if @user.interests != nil && @user.interests != "" %>
                      <%=@user.interests%>
                  <% elsif @user.id == current_user.id %>
                      <%= link_to "add",   edit_user_path(current_user) %>
                  <% end %>
                </td>
                </td>
            </tr>
            <tr>
                <td class="td_title">Life Events: </td>
                <td class="td_desc">
                  <% if @user.events != nil && @user.events != "" %>
                      <%=@user.events%>
                  <% elsif @user.id == current_user.id %>
                      <%= link_to "add",   edit_user_path(current_user) %>
                  <% end %>
                </td>
            </tr>
        </table>
    </div>
</div>