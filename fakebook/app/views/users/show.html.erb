<h1><%= @user.name   %></h1>
<h2><%= @user.email   %></h2>
<div class="micropostdiv">
    <% if @user.microposts.any? %>
      <h3>Total Posts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @user.microposts %>
      </ol>
    <% else %>
    <h1> no microposts yet</h1>
    <% end %>
</div>