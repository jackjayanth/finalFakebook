<br/>
<h1>Update profile</h1>
<div class="edit_user">
 <div class="user_area">
     <%=form_for(@user) do |f|  %>
     <%= render 'shared/error_messages', object: f.object%>
     <table class="user_info">
      <tr>
       <td><%=f.label :name  %></td>
       <td><%=f.text_field :name  %></td>
       </tr>
       <tr>
        <td><%=f.label :email  %></td>
       <td><%=f.text_field :email  %></td>
       <tr>
       <td><%=f.label :password  %></td>
       <td><%=f.password_field :password  %></td>
       </tr>
       <tr>
        <td><%=f.label :password_confirmation, "confirmation"  %></td>
       <td><%=f.password_field :password_confirmation  %></td>
       </tr>
        <tr>
        <td><%=f.label :work  %></td>
       <td><%=f.text_field :work  %></td>
       </tr>
       <tr>
       <td><%=f.label :education  %></td>
       <td><%=f.text_field :education  %></td>
       </tr>
       <tr>
       <td><%=f.label :about  %></td>
       <td><%=f.text_area :about  %></td>
       </tr>
       <tr>
       <td><%=f.label :relatioship  %></td>
       <td><%=f.text_field :relatioship  %></td>
       </tr>
       <tr>
       <td><%=f.label :dob  %></td>
       <td><%=f.date_select :dob  %></td>
       </tr>
       <tr>
       <td><%=f.label :interests  %></td>
       <td><%=f.text_area :interests  %></td>
       </tr>
       <td><%=f.label :events  %></td>
       <td><%=f.text_area :events  %></td>
       </tr>

       <br/><br/>
       <td colspan="2"><%= f.submit "save and update the changes", class:"button"   %></td>
       </table>
     <% end %>
   <div style="clear: both" />
 </div>
</div>